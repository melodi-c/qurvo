{
  "name": "qurvo-analytics",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "db:generate": "turbo db:generate --filter=@qurvo/db",
    "db:migrate": "turbo db:migrate --filter=@qurvo/db",
    "ch:migrate": "turbo ch:migrate --filter=@qurvo/clickhouse",
    "ch:generate": "pnpm --filter @qurvo/clickhouse ch:generate",
    "infra:up": "docker compose -f docker/docker-compose.yml up -d",
    "infra:down": "docker compose -f docker/docker-compose.yml down",
    "swagger:generate": "turbo swagger:generate --filter=@qurvo/api",
    "generate-api": "turbo generate-api --filter=@qurvo/web",
    "test:integration": "bash scripts/run-integration-tests.sh",
    "test:cleanup": "docker stop $(docker ps -q --filter 'label=org.testcontainers') 2>/dev/null || true && docker rm $(docker ps -aq --filter 'label=org.testcontainers') 2>/dev/null || true"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@nestjs/core",
      "argon2",
      "@swc/core",
      "dd-trace",
      "@datadog/native-appsec",
      "@datadog/native-iast-taint-tracking",
      "@datadog/native-metrics",
      "@datadog/pprof",
      "cpu-features",
      "protobufjs"
    ]
  },
  "devDependencies": {
    "turbo": "^2.8.0"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  }
}
